# =============================================================================
# Dord Roller Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# For Docker: These can also be set in docker-compose.yml
# =============================================================================

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# Local development:
DATABASE_URL=postgresql://postgres:password@localhost:5432/dordroller

# Docker (handled automatically by docker-compose):
# DATABASE_URL=postgresql://postgres:dordroller@db:5432/dordroller

# Docker Compose PostgreSQL settings (used when running with docker-compose)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=dordroller
POSTGRES_DB=dordroller

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
PORT=3000
NODE_ENV=development

# -----------------------------------------------------------------------------
# Authentication
# -----------------------------------------------------------------------------
# Set to 'true' to require login, 'false' for anonymous access
AUTH_ENABLED=false

# JWT Secret - REQUIRED when AUTH_ENABLED=true
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=generate-a-64-character-random-hex-string

# -----------------------------------------------------------------------------
# Twitch OAuth (Optional - for Twitch login)
# -----------------------------------------------------------------------------
# Get credentials from: https://dev.twitch.tv/console
# See README.md for setup instructions

TWITCH_CLIENT_ID=your_twitch_client_id
TWITCH_CLIENT_SECRET=your_twitch_client_secret

# Development:
TWITCH_REDIRECT_URI=http://localhost:3000/auth/twitch/callback

# Production (update with your domain):
# TWITCH_REDIRECT_URI=https://yourdomain.com/auth/twitch/callback
