# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/dordroller

# Server Configuration
PORT=3000
NODE_ENV=development

# Twitch OAuth
# Get these from https://dev.twitch.tv/console
TWITCH_CLIENT_ID=your_twitch_client_id
TWITCH_CLIENT_SECRET=your_twitch_client_secret
TWITCH_REDIRECT_URI=http://localhost:3000/auth/twitch/callback

# Authentication
# Set to 'true' to enable Twitch login, 'false' for anonymous access
AUTH_ENABLED=false

# JWT Secret
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=generate-a-64-character-random-hex-string
